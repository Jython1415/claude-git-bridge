# Git Proxy Server Configuration
# Copy this file to .env and fill in your values

# REQUIRED: Secret key for authentication
# Generate with: openssl rand -hex 32
PROXY_SECRET_KEY=your-secret-key-here

# OPTIONAL: Workspace directory for git operations
# Default: ~/git-proxy-workspace
GIT_WORKSPACE=~/git-proxy-workspace

# OPTIONAL: Server port
# Default: 8443
PORT=8443

# OPTIONAL: Debug mode (true/false)
# Default: false
DEBUG=false

# Client Configuration (for Claude.ai skills)
# URL of your proxy server (ngrok or custom domain)
GIT_PROXY_URL=https://your-ngrok-url.ngrok-free.app
# Must match PROXY_SECRET_KEY above
GIT_PROXY_KEY=your-secret-key-here
